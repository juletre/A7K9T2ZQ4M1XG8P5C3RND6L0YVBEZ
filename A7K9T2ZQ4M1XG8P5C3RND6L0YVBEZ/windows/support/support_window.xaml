<Window x:Class="A7K9T2ZQ4M1XG8P5C3RND6L0YVBEZ.windows.support.support_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A7K9T2ZQ4M1XG8P5C3RND6L0YVBEZ.windows.support"
        mc:Ignorable="d"
        Title="Support" Height="650" Width="1000" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="#FF1E1E1E">
    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#FF3A6EA5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF2F5C89"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF244463"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#FF4B4B4B"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="2" Background="#FF2A2A2A" CornerRadius="12" Padding="16" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Support" Foreground="White" FontSize="26" FontWeight="Bold"/>
                <TextBlock Text="Hurtigtilgang til support, status og vedlikehold." Foreground="#FFB0B0B0" FontSize="14"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="#FF242424" CornerRadius="12" Padding="16" Margin="0,0,16,0">
            <StackPanel>
                <TextBlock Text="Systemstatus" Foreground="White" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>
                <Border Background="#FF1E1E1E" CornerRadius="10" Padding="12" Margin="0,0,0,12">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="12" Height="12" CornerRadius="6" Background="#FF3CCB5F" Margin="0,4,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Internett" Foreground="White"/>
                            <TextBlock Text="Tilkoblet" Foreground="#FF8BC34A"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Background="#FF1E1E1E" CornerRadius="10" Padding="12" Margin="0,0,0,12">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="12" Height="12" CornerRadius="6" Background="#FF3CCB5F" Margin="0,4,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Betalingsterminal" Foreground="White"/>
                            <TextBlock Text="Online" Foreground="#FF8BC34A"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Background="#FF1E1E1E" CornerRadius="10" Padding="12" Margin="0,0,0,12">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="12" Height="12" CornerRadius="6" Background="#FFB71C1C" Margin="0,4,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Betalingsterminal 2" Foreground="White"/>
                            <TextBlock Text="Ikke aktivert" Foreground="#FFB0B0B0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Background="#FF1E1E1E" CornerRadius="10" Padding="12" Margin="0,0,0,12">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="12" Height="12" CornerRadius="6" Background="#FFB71C1C" Margin="0,4,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Betalingsterminal 3" Foreground="White"/>
                            <TextBlock Text="Ikke aktivert" Foreground="#FFB0B0B0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Background="#FF1E1E1E" CornerRadius="10" Padding="12" Margin="0,0,0,12">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="12" Height="12" CornerRadius="6" Background="#FFB71C1C" Margin="0,4,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Betalingsterminal 4" Foreground="White"/>
                            <TextBlock Text="Ikke aktivert" Foreground="#FFB0B0B0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Background="#FF1E1E1E" CornerRadius="10" Padding="12">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Width="12" Height="12" CornerRadius="6" Background="#FF3CCB5F" Margin="0,4,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Synkronisering" Foreground="White"/>
                            <TextBlock Text="Oppdatert for 2 min siden" Foreground="#FFB0B0B0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Background="#FF242424" CornerRadius="12" Padding="16">
            <StackPanel>
                <TextBlock Text="Kontakt support" Foreground="White" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>
                <TextBlock Text="Telefon" Foreground="#FFB0B0B0"/>
                <TextBlock Text="+47 22 00 00 00" Foreground="White" Margin="0,0,0,8"/>
                <TextBlock Text="E-post" Foreground="#FFB0B0B0"/>
                <TextBlock Text="support@eventlink.no" Foreground="White" Margin="0,0,0,16"/>

                <TextBlock Text="Hurtighandlinger" Foreground="White" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>
                <Button Content="Send logg til support" Height="44" Margin="0,0,0,8" Style="{StaticResource PrimaryButton}"/>
                <Button Content="Test betalingsterminal" Height="44" Margin="0,0,0,8" Style="{StaticResource SecondaryButton}"/>
                <Button Content="Restart synkronisering" Height="44" Style="{StaticResource SecondaryButton}"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Lukk" Width="120" Height="40" Style="{StaticResource SecondaryButton}" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
