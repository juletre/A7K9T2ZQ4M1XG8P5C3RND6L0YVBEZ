
<Window x:Class="A7K9T2ZQ4M1XG8P5C3RND6L0YVBEZ.pos_hospitality_16x9"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A7K9T2ZQ4M1XG8P5C3RND6L0YVBEZ"
        mc:Ignorable="d"
        Title="pos_hospitality_16x9" Height="1080" Width="1920" Background="Black">

    <Window.Resources>
        <Style x:Key="ProductButton" TargetType="Button">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover (mørkere) -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{Binding Background.Color, RelativeSource={RelativeSource TemplatedParent}}">
                                            <SolidColorBrush.Opacity>0.8</SolidColorBrush.Opacity>
                                        </SolidColorBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Trykket ned -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF222222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CategoryButton" TargetType="Button">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style x:Key="FunctionButton" TargetType="Button">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover (mørkere) -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{Binding Background.Color, RelativeSource={RelativeSource TemplatedParent}}">
                                            <SolidColorBrush.Opacity>0.8</SolidColorBrush.Opacity>
                                        </SolidColorBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Trykket ned -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF222222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="TopFunksjonButton" TargetType="Button">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover (mørkere) -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{Binding Background.Color, RelativeSource={RelativeSource TemplatedParent}}">
                                            <SolidColorBrush.Opacity>0.8</SolidColorBrush.Opacity>
                                        </SolidColorBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Trykket ned -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF222222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="NumberButton" TargetType="Button">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover (mørkere) -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{Binding Background.Color, RelativeSource={RelativeSource TemplatedParent}}">
                                            <SolidColorBrush.Opacity>0.8</SolidColorBrush.Opacity>
                                        </SolidColorBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Trykket ned -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF222222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        
        <!-- Define main layout: 3 columns × 2 rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Extra function buttons -->
            <RowDefinition Height="*"/>
            <!-- Main content -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Categories -->
            <ColumnDefinition Width="*"/>
            <!-- Product buttons -->
            <ColumnDefinition Width="400"/>
            <!-- Order and standard functions -->
        </Grid.ColumnDefinitions>

        <!-- 1. Extra Function Buttons (Top Row) -->
        <UniformGrid Grid.Row="0"
             Grid.ColumnSpan="3"
             Rows="1"
             Columns="10"
             Margin="0,0,0,0"
             Height="75px"
             Background="Gray">
            <Button Content="Extra 1" Style="{StaticResource TopFunksjonButton}"/>
            <Button Content="Extra 2" Style="{StaticResource TopFunksjonButton}"/>
            <Button Content="Extra 3" Style="{StaticResource TopFunksjonButton}"/>
            <Button Content="Extra 4" Style="{StaticResource TopFunksjonButton}"/>
            <Button Content="Extra 5" Style="{StaticResource TopFunksjonButton}"/>
            <Button Content="Extra 6" Style="{StaticResource TopFunksjonButton}"/>
            <Button Content="Extra 7" Style="{StaticResource TopFunksjonButton}"/>
            <Button Content="Extra 8" Style="{StaticResource TopFunksjonButton}"/>
            <Button Content="Extra 9" Style="{StaticResource TopFunksjonButton}"/>
            <Button Content="Extra 10" Style="{StaticResource TopFunksjonButton}"/>
        </UniformGrid>

        <!-- 2. Category Buttons (Left Column) -->
        <UniformGrid Grid.Row="1"
             Grid.Column="0"
             Rows="10"
             Columns="1"
             Margin="0,10,10,0"
             Background="Gray">
            <Button Content="Category 1" Style="{StaticResource CategoryButton}"/>
            <Button Content="Category 2" Style="{StaticResource CategoryButton}"/>
            <Button Content="Category 3" Style="{StaticResource CategoryButton}"/>
            <Button Content="Category 4" Style="{StaticResource CategoryButton}"/>
            <Button Content="Category 5" Style="{StaticResource CategoryButton}"/>
            <Button Content="Category 6" Style="{StaticResource CategoryButton}"/>
            <Button Content="Category 7" Style="{StaticResource CategoryButton}"/>
            <Button Content="Category 8" Style="{StaticResource CategoryButton}"/>
            <Button Content="Category 9" Style="{StaticResource CategoryButton}"/>
            <Button Content="Category 10" Style="{StaticResource CategoryButton}"/>
        </UniformGrid>

        <!-- 3. Product Buttons (Center Column) -->
        <UniformGrid Grid.Row="1" Grid.Column="1" Rows="8" Columns="6" Margin="10">
            <!-- Example product buttons -->
            <Button Content="Product 1" Style="{StaticResource ProductButton}"/>
            <Button Content="Product 2" Style="{StaticResource ProductButton}"/>
            <Button Content="Product 3" Style="{StaticResource ProductButton}"/>
            <Button Content="Product 4" Style="{StaticResource ProductButton}"/>
            <Button Content="Product 5" Style="{StaticResource ProductButton}"/>
            <Button Content="Product 6" Style="{StaticResource ProductButton}"/>
            
            <!-- etc... -->
        </UniformGrid>

        <!-- 4. Order + Standard Functions (Right Column) -->
        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- Order list -->
                <RowDefinition Height="Auto"/>
                <!-- New middle grid -->
                <RowDefinition Height="Auto"/>
                <!-- Standard buttons -->
            </Grid.RowDefinitions>

            <!-- Product list with total -->
            <Grid Grid.Row="0" Margin="5,15,5,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <!-- DataGrid -->
                    <RowDefinition Height="Auto"/>
                    <!-- Total row -->
                </Grid.RowDefinitions>

                <!-- DataGrid -->
                <DataGrid x:Name="OrderList"
              Grid.Row="0"
              AutoGenerateColumns="False"
              HeadersVisibility="Column"
              CanUserAddRows="False"
              Background="#FFF"
              Foreground="Black"
              ItemsSource="{Binding OrderItems}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Product" Binding="{Binding Product}" Width="*"/>
                        <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="Auto"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="Auto"/>
                        <DataGridTemplateColumn Header="Remove" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="🗑" Width="30" Height="30"
                                Click="RemoveItem_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Total row -->
                <Border Grid.Row="1" Background="#EEE" BorderBrush="#CCC" BorderThickness="1" Padding="5">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="Total: " FontWeight="Bold" FontSize="18" VerticalAlignment="Center"/>
                        <TextBlock x:Name="TotalText" Text="0.00" FontWeight="Bold" FontSize="18" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- 🆕 NEW GRID: 3 columns × 5 rows of buttons -->
            <UniformGrid Grid.Row="1" Columns="3" Rows="5" Margin="0">
                <Button Content="1" Style="{StaticResource NumberButton}"/>
                <Button Content="2" Style="{StaticResource NumberButton}"/>
                <Button Content="3" Style="{StaticResource NumberButton}"/>
                <Button Content="4" Style="{StaticResource NumberButton}"/>
                <Button Content="5" Style="{StaticResource NumberButton}"/>
                <Button Content="6" Style="{StaticResource NumberButton}"/>
                <Button Content="7" Style="{StaticResource NumberButton}"/>
                <Button Content="8" Style="{StaticResource NumberButton}"/>
                <Button Content="9" Style="{StaticResource NumberButton}"/>
                <Button Content="-" Style="{StaticResource NumberButton}"/>
                <Button Content="0" Style="{StaticResource NumberButton}"/>
                <Button Content="+" Style="{StaticResource NumberButton}"/>
                <Button Content="Clear" Style="{StaticResource NumberButton}"/>
                <Button Content="*" Style="{StaticResource NumberButton}"/>
                <Button Content="DEL" Style="{StaticResource NumberButton}"/>
            </UniformGrid>

            <!-- Standard Function Buttons -->
            <UniformGrid Grid.Row="2" Columns="2" Rows="4" Margin="0">
                <Button Style="{StaticResource FunctionButton}" Content="Bank 1" Background="Aqua"/>
                <Button Style="{StaticResource FunctionButton}" Content="Bank 2" Background="Aqua"/>
                <Button Style="{StaticResource FunctionButton}" Content="Cash" Background="DarkGreen"/>
                <Button Style="{StaticResource FunctionButton}" Content="Vipps" Background="OrangeRed"/>
                <Button Style="{StaticResource FunctionButton}" Content="Betalingsmidler"/>
                <Button Style="{StaticResource FunctionButton}" Content="tba"/>
                <Button Style="{StaticResource FunctionButton}" Content="Kvittering"/>
                <Button Style="{StaticResource FunctionButton}" Content="Ny Ordre"/>
            </UniformGrid>
        </Grid>
    </Grid>
</Window>
