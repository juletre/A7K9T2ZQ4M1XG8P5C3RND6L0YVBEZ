<Window x:Class="A7K9T2ZQ4M1XG8P5C3RND6L0YVBEZ.windows.company_selection.salespoint_selector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A7K9T2ZQ4M1XG8P5C3RND6L0YVBEZ.windows.company_selection"
        mc:Ignorable="d"
        Title="Velg salgssted" Height="700" Width="1100" WindowStartupLocation="CenterScreen" Background="#FF1E1E1E">
    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Background" Value="#FF3A6EA5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF2F5C89"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF244463"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#FF4B4B4B"/>
        </Style>
        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF1E1E1E"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="CompanyItem" TargetType="ListBoxItem">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF2E2E2E"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FF3A6EA5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3C3C3C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="2" Background="#FF2A2A2A" CornerRadius="12" Padding="16" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Velg salgssted" Foreground="White" FontSize="26" FontWeight="Bold"/>
                <TextBlock Text="Velg hvilket salgssted du vil åpne i EvPOS." Foreground="#FFB0B0B0" FontSize="14"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="#FF242424" CornerRadius="12" Padding="16" Margin="0,0,16,0">
            <StackPanel>
                <TextBlock Text="Databaseinformasjon" Foreground="White" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Server" Foreground="#FFB0B0B0" Margin="0,0,12,8"/>
                    <TextBox Grid.Column="1" Style="{StaticResource InputBox}" Text="(local)" Margin="0,0,8,8"/>
                    <Button Grid.Column="2" Content="..." Width="32" Height="32" Margin="0,0,0,8" Style="{StaticResource SecondaryButton}"/>

                    <TextBlock Grid.Row="1" Text="Windows Pålogging" Foreground="#FFB0B0B0" Margin="0,0,12,8"/>
                    <CheckBox Grid.Row="1" Grid.Column="1" Content="Aktiv" Foreground="White" VerticalAlignment="Center" Margin="0,0,0,8"/>

                    <TextBlock Grid.Row="2" Text="Bruker" Foreground="#FFB0B0B0" Margin="0,0,12,8"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource InputBox}" Text="SA" Margin="0,0,8,8"/>

                    <TextBlock Grid.Row="3" Text="Passord" Foreground="#FFB0B0B0" Margin="0,0,12,8"/>
                    <PasswordBox Grid.Row="3" Grid.Column="1" Height="32" Background="#FF1E1E1E" Foreground="White" BorderThickness="0" Padding="8" Margin="0,0,8,8"/>

                    <TextBlock Grid.Row="4" Text="Database" Foreground="#FFB0B0B0" Margin="0,0,12,0"/>
                    <TextBox Grid.Row="4" Grid.Column="1" Style="{StaticResource InputBox}" Text="EvPOS_DB" Margin="0,0,8,0"/>
                    <Button Grid.Row="4" Grid.Column="2" Content="..." Width="32" Height="32" Style="{StaticResource SecondaryButton}"/>
                </Grid>

                <Border Background="#FF1E1E1E" CornerRadius="10" Padding="12" Margin="0,16,0,0">
                    <StackPanel>
                        <TextBlock Text="Lisensnr: EVPOS-2024-0098" Foreground="White" Margin="0,0,0,6"/>
                        <TextBlock Text="Antall firmaer: 4" Foreground="#FFB0B0B0" Margin="0,0,0,4"/>
                        <TextBlock Text="Antall brukere: 18" Foreground="#FFB0B0B0" Margin="0,0,0,4"/>
                        <TextBlock Text="Antall aktive brukere: 7" Foreground="#FFB0B0B0" Margin="0,0,0,8"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Width="12" Height="12" CornerRadius="6" Background="#FF3CCB5F" Margin="0,3,8,0"/>
                            <TextBlock Text="Tilkoblet" Foreground="#FFB0B0B0"/>
                            <Border Width="12" Height="12" CornerRadius="6" Background="#FFB71C1C" Margin="16,3,8,0"/>
                            <TextBlock Text="Frakoblet" Foreground="#FFB0B0B0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Background="#FF242424" CornerRadius="12" Padding="16">
            <StackPanel>
                <TextBlock Text="Firmaer på lisens" Foreground="White" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>
                <ListBox ItemsSource="{Binding Salespoints}"
                         SelectedItem="{Binding SelectedSalespoint, Mode=TwoWay}"
                         DisplayMemberPath="Name"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White"
                         ItemContainerStyle="{StaticResource CompanyItem}"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Avbryt" Width="120" Height="40" Margin="0,0,12,0" Style="{StaticResource SecondaryButton}" Click="Close_Click"/>
            <Button Content="Åpne salgssted" Width="180" Height="40" Style="{StaticResource PrimaryButton}" Click="OpenSalespoint_Click"/>
        </StackPanel>
    </Grid>
</Window>
