<Window x:Class="A7K9T2ZQ4M1XG8P5C3RND6L0YVBEZ.windows.administration.admin_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A7K9T2ZQ4M1XG8P5C3RND6L0YVBEZ.windows.administration"
        mc:Ignorable="d"
        Title="pos_hospitality" Height="1080" Width="1920" Background="Black">
    <Window.Resources>
        <Style x:Key="ProductButton" TargetType="Button">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover (mørkere) -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{Binding Background.Color, RelativeSource={RelativeSource TemplatedParent}}">
                                            <SolidColorBrush.Opacity>0.8</SolidColorBrush.Opacity>
                                        </SolidColorBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Trykket ned -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF222222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CategoryButton" TargetType="Button">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style x:Key="FunctionButton" TargetType="Button">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover (mørkere) -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{Binding Background.Color, RelativeSource={RelativeSource TemplatedParent}}">
                                            <SolidColorBrush.Opacity>0.8</SolidColorBrush.Opacity>
                                        </SolidColorBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Trykket ned -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF222222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ShortcutButton" TargetType="Button">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover (mørkere) -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{Binding Background.Color, RelativeSource={RelativeSource TemplatedParent}}">
                                            <SolidColorBrush.Opacity>0.8</SolidColorBrush.Opacity>
                                        </SolidColorBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Trykket ned -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF222222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="NumberButton" TargetType="Button">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="10"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover (mørkere) -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{Binding Background.Color, RelativeSource={RelativeSource TemplatedParent}}">
                                            <SolidColorBrush.Opacity>0.8</SolidColorBrush.Opacity>
                                        </SolidColorBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Trykket ned -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FF222222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="10">

        <!-- Define main layout: 3 columns × 2 rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Extra function buttons -->
            <RowDefinition Height="*"/>
            <!-- Main content -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Categories -->
            <ColumnDefinition Width="*"/>
            <!-- Product buttons -->
            <ColumnDefinition Width="400"/>
            <!-- Order and standard functions -->
        </Grid.ColumnDefinitions>

        <!-- 1. Extra Function Buttons (Top Row) -->
        <UniformGrid Grid.Row="0"
             Grid.ColumnSpan="3"
             Rows="1"
             Columns="10"
             Margin="0,0,0,0"
             Height="75px"
             Background="Gray">
            <Button x:Name="functionButton1" Content="Function 1" Style="{StaticResource ShortcutButton}"/>
            <Button x:Name="functionButton2" Content="Function 2" Style="{StaticResource ShortcutButton}"/>
            <Button x:Name="functionButton3" Content="Function 3" Style="{StaticResource ShortcutButton}"/>
            <Button x:Name="functionButton4" Content="Function 4" Style="{StaticResource ShortcutButton}"/>
            <Button x:Name="functionButton5" Content="Function 5" Style="{StaticResource ShortcutButton}"/>
            <Button x:Name="functionButton6" Content="Function 6" Style="{StaticResource ShortcutButton}"/>
            <Button x:Name="functionButton7" Content="Function 7" Style="{StaticResource ShortcutButton}"/>
            <Button x:Name="functionButton8" Content="Function 8" Style="{StaticResource ShortcutButton}"/>
            <Button x:Name="functionButton9" Content="Function 9" Style="{StaticResource ShortcutButton}"/>
            <Button x:Name="functionButton10" Content="Function 10" Style="{StaticResource ShortcutButton}" Click="functionButton10_Click"/>
        </UniformGrid>

        <!-- 2. Category Buttons (Left Column) -->
        <UniformGrid Grid.Row="1"
             Grid.Column="0"
             Rows="10"
             Columns="1"
             Margin="0,10,10,0"
             Background="Gray">
            <Button Content="Category 1" Style="{StaticResource CategoryButton}"/>
            <Button Content="Category 2" Style="{StaticResource CategoryButton}"/>
            <Button Content="Category 3" Style="{StaticResource CategoryButton}"/>
            <Button Content="Category 4" Style="{StaticResource CategoryButton}"/>
            <Button Content="Category 5" Style="{StaticResource CategoryButton}"/>
            <Button Content="Category 6" Style="{StaticResource CategoryButton}"/>
            <Button Content="Category 7" Style="{StaticResource CategoryButton}"/>
            <Button Content="Category 8" Style="{StaticResource CategoryButton}"/>
            <Button Content="Category 9" Style="{StaticResource CategoryButton}"/>
            <Button Content="Category 10" Style="{StaticResource CategoryButton}"/>
        </UniformGrid>
        
    </Grid>
</Window>